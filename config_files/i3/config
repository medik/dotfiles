# Specialare
bindsym $mod+shift+w exec python3 kbd-layout-toggle.py --change-layout se-svorak-custom
bindsym $mod+shift+x exec i3lock

exec --no-startup-id nm-applet

# Set custom svorak layout
exec setxkbmap se-svorak-custom

# Turn off Caps-Lock
exec setxkbmap -option caps:none

# Disable touchpad
# exec xinput set-prop 11 "Device Enabled" 0

# Sets background 
exec sh ~/.fehbg

# Autostart
exec dropbox start
exec emacs
exec steam
exec firefox
exec terminator
exec dunst

# Locks computer after 30 minute
# exec xautolock -time 30 -locker i3lock

# Nvidia
exec nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 { ForceCompositionPipeline = On }"

